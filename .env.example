# AI Agents Platform - Environment Configuration
# Copy this file to .env and update the values for your environment

# ==========================================================================
# LLM API Keys (Required for agent operation)
# ==========================================================================
# Primary LLM provider - Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Fallback LLM provider - OpenAI (optional, used if Anthropic fails)
OPENAI_API_KEY=sk-your-key-here

# ==========================================================================
# Database Configuration
# ==========================================================================
# PostgreSQL connection URL (use postgresql+asyncpg for async support)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/ai_agents

# Redis URL for caching and distributed rate limiting
REDIS_URL=redis://redis:6379/0

# ==========================================================================
# Security (REQUIRED - Change in production!)
# ==========================================================================
# Secret key for JWT token signing - MUST be changed in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# JWT token expiration in minutes (default: 1440 = 24 hours)
JWT_EXPIRE_MINUTES=1440

# ==========================================================================
# CORS Configuration
# ==========================================================================
# Comma-separated list of allowed origins for CORS
# In production, set this to your frontend domain(s)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==========================================================================
# Rate Limiting Configuration
# ==========================================================================
# Enable Redis-based distributed rate limiting (recommended for production)
RATE_LIMIT_REDIS_ENABLED=false

# Default rate limits (requests per minute/hour)
RATE_LIMIT_DEFAULT_PER_MINUTE=60
RATE_LIMIT_DEFAULT_PER_HOUR=1000
RATE_LIMIT_AUTH_PER_MINUTE=10
RATE_LIMIT_AUTH_PER_HOUR=100
RATE_LIMIT_READ_PER_MINUTE=120
RATE_LIMIT_READ_PER_HOUR=5000

# ==========================================================================
# Orchestration Engine Configuration
# ==========================================================================
# Agent definitions directory
AGENT_DEFINITIONS_DIR=/app/agents/definitions

# Generic agent URL (for dynamic agent routing)
GENERIC_AGENT_URL=http://generic-agent:5000

# ==========================================================================
# Message Queue (Redpanda/Kafka)
# ==========================================================================
REDPANDA_BROKERS=redpanda:9092
REDPANDA_ENABLED=true

# ==========================================================================
# Open Policy Agent
# ==========================================================================
OPA_URL=http://opa:8181
OPA_ENABLED=true

# ==========================================================================
# Application Configuration
# ==========================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Python path
PYTHONPATH=/app

# ==========================================================================
# Performance Tuning
# ==========================================================================
# Comma-separated list of agent IDs to prewarm at startup
PREWARM_AGENTS=executive_summary_agent_001,meeting_notes_agent_002

# Maximum worker threads
MAX_WORKERS=4

# Worker timeout in seconds
WORKER_TIMEOUT=300

# ==========================================================================
# Agent Configuration (for individual agents)
# ==========================================================================
# Override default agent port
AGENT_PORT=8000

# Override Claude model
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Override max tokens
MAX_TOKENS=4096

# Override temperature
TEMPERATURE=0.7

# ==========================================================================
# Monitoring (Optional)
# ==========================================================================
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# ==========================================================================
# Third-Party Integrations (Optional)
# ==========================================================================
HUBSPOT_API_KEY=
SLACK_WEBHOOK_URL=
SENDGRID_API_KEY=

# ==========================================================================
# Feature Flags
# ==========================================================================
ENABLE_TEAM_COLLABORATION=true
ENABLE_WORKFLOWS=true
ENABLE_ANALYTICS=true
